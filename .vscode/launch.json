    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Mocha Tests",
            "type": "pwa-node",
            "request": "attach",
            "port": 9229,
            "continueOnAttach": true,
            "resolveSourceMapLocations": [
                "!**/node_modules/**",
                "!**/.vscode/extensions/hbenl.vscode-mocha-test-adapter-*/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--u bdd"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}